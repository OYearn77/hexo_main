/* 分类和标签的样式 */

/* 共享样式 */
.category-cloud-container,
.tag-cloud-container {
  padding: 30px;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start; /* 重要：顶部对齐而不是拉伸 */
  justify-content: flex-start;
  gap: 15px;
}

/* 分类项样式 */
.category-item {
  display: inline-block;
  padding: 8px 15px;
  border-radius: var(--soft-primary-radius, 12px);
  background-color: var(--theme-bg-high, #ffffff);
  transition: all 0.3s ease;
  margin: 5px;
  box-shadow: 
    var(--soft-shadow, 3px) var(--soft-shadow, 3px) calc(var(--soft-shadow, 3px) * 2) var(--theme-bg-shadow, #dddfe1),
    calc(-1 * var(--soft-shadow, 3px)) calc(-1 * var(--soft-shadow, 3px)) calc(var(--soft-shadow, 3px) * 2) var(--theme-bg-high, #ffffff);
  height: auto !important; /* 强制高度自适应 */
  min-height: 0 !important; /* 移除最小高度限制 */
  align-self: flex-start !important; /* 确保项目从顶部对齐 */
}

.category-item:hover {
  transform: translateY(-5px);
  box-shadow: 
    var(--soft-shadow, 3px) var(--soft-shadow, 3px) calc(var(--soft-shadow, 3px) * 3) var(--theme-bg-shadow, #dddfe1),
    calc(-1 * var(--soft-shadow, 3px)) calc(-1 * var(--soft-shadow, 3px)) calc(var(--soft-shadow, 3px) * 3) var(--theme-bg-high, #ffffff);
}

.category-item a {
  color: var(--theme-text-primary, #3e3e5f);
  text-decoration: none;
  font-weight: 500;
  display: inline-flex; /* 改为内联弹性布局 */
  align-items: center;
  height: auto !important;
}

.category-item .category-count {
  margin-left: 8px;
  font-size: 0.85em;
  opacity: 0.7;
  background: var(--theme-text-active, #f857a6);
  color: white;
  border-radius: 20px;
  padding: 2px 8px;
  font-weight: bold;
}

/* 分类大小变化 */
.category-size-1 { font-size: 0.8rem; }
.category-size-2 { font-size: 0.9rem; }
.category-size-3 { font-size: 1.0rem; }
.category-size-4 { font-size: 1.1rem; }
.category-size-5 { font-size: 1.2rem; }
.category-size-6 { font-size: 1.3rem; }
.category-size-7 { font-size: 1.4rem; }
.category-size-8 { font-size: 1.5rem; }
.category-size-9 { font-size: 1.6rem; }
.category-size-10 { font-size: 1.7rem; }

/* 标签项样式 */
.tag-item {
  display: inline-block;
  padding: 6px 12px;
  border-radius: var(--soft-primary-radius, 12px);
  background-color: var(--theme-bg-high, #ffffff);
  transition: all 0.3s ease;
  margin: 5px;
  box-shadow: 
    var(--soft-shadow, 3px) var(--soft-shadow, 3px) calc(var(--soft-shadow, 3px) * 2) var(--theme-bg-shadow, #dddfe1),
    calc(-1 * var(--soft-shadow, 3px)) calc(-1 * var(--soft-shadow, 3px)) calc(var(--soft-shadow, 3px) * 2) var(--theme-bg-high, #ffffff);
  height: auto !important; /* 强制高度自适应 */
  min-height: 0 !important; /* 移除最小高度限制 */
  align-self: flex-start !important; /* 确保项目从顶部对齐 */
}

.tag-item:hover {
  transform: translateY(-3px);
  box-shadow: 
    var(--soft-shadow, 3px) var(--soft-shadow, 3px) calc(var(--soft-shadow, 3px) * 3) var(--theme-bg-shadow, #dddfe1),
    calc(-1 * var(--soft-shadow, 3px)) calc(-1 * var(--soft-shadow, 3px)) calc(var(--soft-shadow, 3px) * 3) var(--theme-bg-high, #ffffff);
}

.tag-item a {
  color: var(--theme-text-primary, #3e3e5f);
  text-decoration: none;
  font-weight: 500;
  display: inline-flex; /* 改为内联弹性布局 */
  align-items: center;
  height: auto !important;
}

.tag-item .tag-count {
  margin-left: 6px;
  font-size: 0.85em;
  opacity: 0.7;
  background: var(--theme-text-active, #f857a6);
  color: white;
  border-radius: 20px;
  padding: 1px 6px;
  font-weight: bold;
}

/* 标签大小变化 */
.tag-size-1 { font-size: 0.75rem; }
.tag-size-2 { font-size: 0.85rem; }
.tag-size-3 { font-size: 0.95rem; }
.tag-size-4 { font-size: 1.05rem; }
.tag-size-5 { font-size: 1.15rem; }
.tag-size-6 { font-size: 1.25rem; }
.tag-size-7 { font-size: 1.35rem; }
.tag-size-8 { font-size: 1.45rem; }
.tag-size-9 { font-size: 1.55rem; }
.tag-size-10 { font-size: 1.65rem; }

/* 确保容器和项目设置正确 */
.widget-tags, .widget-categorys {
  display: block;
}

/* 额外的覆盖规则，确保不受其他样式影响 */
.tag-item, .category-item {
  flex: 0 0 auto !important; /* 不伸缩，保持自身大小 */
  width: auto !important; /* 宽度自适应 */
  max-height: none !important; /* 无最大高度限制 */
}

/* 响应式调整 */
@media screen and (max-width: 768px) {
  .category-cloud-container,
  .tag-cloud-container {
    padding: 15px;
  }
  
  .category-item,
  .tag-item {
    padding: 5px 10px;
  }
}

/* 添加这个新类，用于包装项目，确保它们高度独立且垂直居中对齐 */
.inline-block-wrapper {
  display: inline-block;
  vertical-align: middle; /* 改为中线对齐 */
  margin: 5px;
}

/* 修改容器样式 */
.category-cloud-container,
.tag-cloud-container {
  padding: 30px;
  display: block;
  text-align: center;
  line-height: 0; /* 防止行高影响垂直对齐 */
}

/* 为容器添加一个辅助元素，以确保完美的垂直居中 */
.category-cloud-container::after,
.tag-cloud-container::after {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

/* 标签项样式保持不变，确保高度自适应 */
.category-item,
.tag-item {
  margin: 0;
  display: block;
  height: auto !important;
}
//垂直方向中心线居中对齐
.tag-item a,
.category-item a {
  line-height: 1.5; /* 设置一个合适的行高 */
  vertical-align: middle;
}