/* 代码块容器样式 */
.highlight-wrapper {
  margin-bottom: 20px;
}

/* 代码标题栏样式 */
.code-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 16px 17px;
  background: #f0eee7;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border: 1px solid #f0eee7;
  border-bottom: none;
    transform: translateY(9px);
}

/* 语言标签样式 */
.code-language {
  color: #6a737d;
  font-size: 14px;
  font-family: SFMono-Regular, Consolas, "Liberation Mono", Menlo, monospace;
}

/* 复制按钮样式 */
.copy-button {
  background: transparent;
  border: none;
  color: #6a737d;
  cursor: pointer;
  padding: 2px 6px;
  font-size: 14px;
  display: flex;
  align-items: center;
  opacity: 0.8;
  transition: opacity 0.2s;
}

.copy-button:hover {
  opacity: 1;
}

/* 复制按钮图标 */
.copy-icon {
  width: 16px;
  height: 16px;
  margin-right: 4px;
  vertical-align: middle;
}

/* 确保代码块样式正确 - 添加圆角 */
.highlight {
  margin: 0;
  padding: 0;
  position: relative;
  max-height: calc(35em * 1.5);
  overflow-y: auto;
  background-color: #282c34;
  border-radius: 10px;
}

/* 代码块内容容器 */
.code-content {
  background-color: #282c34;
  border: 1px solid #e0e0e0;
  border-top: none;
  border-radius: 10px;
  overflow: hidden;
}

/* 确保内部表格样式 */
.code-content table {
  margin: 0;
  border: none;
}

/* 确保代码前景色正确 */
.code-content pre {
  margin: 0;
  color: #abb2bf;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

/* 确保滚动条不会破坏圆角效果 */
.code-content::-webkit-scrollbar {
  border-bottom-right-radius: 10px;
}


